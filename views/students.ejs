<!-- basic html template -->
<html>
    <head>
        <title>Students</title>
        <link rel="stylesheet" href="css/style.css">
    </head>
    <body>
        <h1>Students</h1>
        <h2>Click on the tabs to navigate</h2>
        <nav>
            <ul class="tab">
                <li><a href="/teacher/academicYear">Academic Year</a></li>
                <li><a href="/teacher/classes">Classes</a></li>
                <li><a href="/teacher/students">Students</a></li>
                <li><a href="/teacher/teachers">Teachers</a></li>
            </ul>
        </nav>

        <!-- basic html template -->
        <html>
            <head>
                <title>New Student Form</title>
                <link rel="stylesheet" href="css/style.css">
            </head>
            <body>
                <h1>New Student</h1>
                <form action="/teacher/newStudent" method="POST">
                    <label for="firstname">Firstname:</label>
                    <input type="text" id="firstname" name="firstname" required><br><br>
                    <label for="lastname">Lastname:</label>
                    <input type="text" id="lastname" name="lastname" required><br><br>
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required><br><br>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required><br><br>
                    <button type="submit">Submit</button>
                </form>
                <h1>added students</h1>
                
                <% if (typeof student !== 'undefined') { %>
                    <h3>Added Student:</h3>
                    <p>First Name: <%= student.firstname %></p>
                    <p>Last Name: <%= student.lastname %></p>
                <% } %>

                <h1>search student by name</h1>
                <form action="/teacher/getstudent" method="GET">
                    <label for="firstname">Firstname:</label>
                    <input type="text" id="firstname" name="firstname" required><br><br>
                    <button type="submit">Submit</button>
                </form>

                <h1>search student by id</h1>
                <form action="/teacher/getstudentById" method="GET">
                    <label for="firstname">Id:</label>
                    <select name="Studentid" id="Studentid">
                        <% for( let index = 0; index < lenStudents; index++ ) { %>
                            <option value="<%= index+1 %>"><%= index+1 %></option>
                        <% } %>
                    </select>
                    <button type="submit">Submit</button>
                </form>
                <h1>found students</h1>
                
                <% if (typeof students !== 'undefined') { %>
                    <% for (var i = 0; i < students.length; i++) { %>
                        <h3>Found Student:</h3>
                        <p>First Name: <%= students[i].firstname %></p>
                        <p>Last Name: <%= students[i].lastname %></p>
                    <% } %>
                <% } %>
                
                
            </body>
        </html>
        
    </body>
    

    <script>
    </script>

</html>